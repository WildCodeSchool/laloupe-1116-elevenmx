<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Eleven MX{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" media="screen"
              href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/elevenmx/css/style.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('logo_mini.ico') }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>



<nav class="navbar navbar-inverse navbar-static-top">


    <div class="container-fluid">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>

        <div class="collapse navbar-collapse" id="myNavbar">

            <ul class="nav navbar-nav navbar-left">
                <div class="col-xs-1"><img src="{{ asset('bundles/elevenmx/img/mini-logo.png') }}" class="logo_emx"></div>

            </ul>

            <ul class="nav navbar-nav logo_css">
                <li><img src="{{ asset('bundles/elevenmx/img/elevenmx_min.png') }}" id="elevenmx_img"></li>
                <br>
                <li><h1 id="eleven-h1">Spécialiste du kit déco motocross</h1></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <div class="col-xs-1"><a href="{{ path('fos_user_security_logout') }}"
                                         class="glyphicon glyphicon-off" id="log_off"></a></div>
            </ul>
        </div>


    </div>


    <div class="blue">


        <!--  emplacement boutons -->

        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <!-- BOUTON SUPER ADMIN -->
        <div class="col-lg-1 col-xs-1"> <a href="{{ path('projet_indexGraph') }}"><input type="button" value="Liste des projets" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('projet_indexGraph') }}"><input type="button" value="Liste clients" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('elevenmx_sendMail') }}"><input type="button" value="Nouvel utilisateur" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('projet_new') }}"><input type="button" value="Nouveay projet" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('produit_index') }}"><input type="button" value="Liste produits" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('marque_index') }}"><input type="button" value="Liste marques" class="bouton4"></a></div>
        <div class="col-lg-1 col-xs-1"> <a href="{{ path('projet_indexHisto') }}"><input type="button" value="archives" class="bouton4"></a></div>

        {% elseif is_granted('ROLE_ADMIN') %}
        <!-- BOUTON ADMIN -->
        <div class="col-lg-1 col-xs-1"></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('projet_indexGraph') }}"><input type="button" value="Liste des projets" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('elevenmx_sendMail') }}"><input type="button" value="Nouvel utilisateur" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('projet_new') }}"><input type="button" value="Nouveau projet" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('produit_index') }}"><input type="button" value="Liste des produits" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-2"> <a href="{{ path('marque_index') }}"><input type="button" value="Liste des marques" class="bouton4"></a></div>
        <div class="col-lg-1 col-xs-1"> <a href="{{ path('projet_indexHisto') }}"><input type="button" value="Archives" class="bouton4"></a></div>

        {% elseif is_granted('ROLE_GRAPH') %}
        <!-- BOUTON GRAPH -->
        <div class="col-lg-4 col-xs-1"></div>

        <div class="col-lg-2 col-xs-5"> <a href="{{ path('projet_indexHisto') }}"><input type="button" value="Archives" class="bouton4"></a></div>
        <div class="col-lg-2 col-xs-5"> <a href="{{ path('projet_indexGraph') }}"><input type="button" value="En cours" class="bouton4"></a></div>
        <div class="col-lg-4 col-xs-1"></div>


        {% elseif is_granted('ROLE_USER') %}
        <!-- BOUTON USER -->
            {#<div class="col-lg-2 col-xs-1"></div>#}
            <div class="col-lg-offset-4 col-lg-2 col-xs-4 col-sm-4"> <a href="{{ path('fos_user_change_password') }}"><input type="button" value="Modifier mon mot de passe" class="bouton4"></a></div>
            <div class="col-lg-2 col-xs-offset-2 col-xs-4 col-sm-4"> <a href="{{ path('projet_index') }}"><input type="button" value="Liste des projets" class="bouton4"></a></div>
            <div class="col-lg-4 col-xs-1"></div>



        {% endif %}


    </div>


</nav>


<body>


{% block body %}{% endblock %}

</body>


{%  include 'footer.html.twig' %}



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js"></script>

{% block javascripts %}{% endblock %}


</html>



