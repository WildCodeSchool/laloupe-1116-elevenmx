                <div class="col-lg-4"><input type="button" value="Voir le formulaire"></div>
                <div class="col-lg-4"><input type="button" value="envoyer un nouveau BAT"></div>
                <div class="col-lg-4"><input type="button" value="Terminer le projet"></div>

            </div>
            <br>

            {% for projet in projets if projet.id == 1 %}
            <div class="row bloc">


                {{ dump(projets) }}


                <!-- bloc a repeter pour les differents echanges -->

                <div class="col-lg-12">


                    <div class="col-lg-8">
                        <!-- date et status -->
                        <p>Date:  DateTime </p>
                        <br>
                        <div class="bar_status"> status </div>

                        <!-- partie commentaire -->

                        <input type="textarea" class="txtarea">

                    </div>

                    <div class="col-lg-4">

                        <!-- stockage image -->

                    </div>

                </div>

            </div>
            <br>
            {% endfor %}


        </div>

        <!-- Fin Colonne droite -->


    </div>
{% endblock %}
