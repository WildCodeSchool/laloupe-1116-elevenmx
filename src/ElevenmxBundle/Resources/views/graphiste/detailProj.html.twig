{% extends 'base.html.twig' %}

{% block body %}



    <div class="container-fluid">

        <div class="row">
            <br>
            <!-- emplacement bouton back et historique -->
            <div class="col-lg-1"></div>
            <div class="col-lg-2">
                <a href="{{ path('graphiste_listProj') }}"><input type="button" value="Retour aux projets" class="btn btn-large"></a>
            </div>

            <div class="col-lg-8 text-center">
                <h4>Hisorique</h4>
            </div>
        </div>
        <br>
        {#{% for projet in projets %}#}
        <!-- Debut Colonne gauche -->
        <div class="col-lg-3 text-center">

            <!-- stockage logo / nom projet / nom client / statut projet -->

            <div class="col-lg-12"><img src="{{ asset('bundles/elevenmx/img/micro-logo.png') }}" alt="micro-logo"></div>

            <div class="col-lg-12"><p>{{ dump(projets) }}</p></div>

            <div class="col-lg-12"><p>Nom graphiste</p></div>

