        </div>
{#{% endfor %}#}

        <!-- Fin Colonne gauche -->




        <!-- Colonne droite -->



        <div class="col-lg-9">

            <!-- stockage btns "voir le form" / "envoyer un new BAT" / "Terminer le projet" -->
