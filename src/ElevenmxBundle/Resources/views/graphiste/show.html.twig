{% extends 'base.html.twig' %}

{% block body %}
    <h1>Graphiste</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ graphiste.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ graphiste.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ graphiste.prenom }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ graphiste.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ graphiste.password }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('graphiste_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('graphiste_edit', { 'id': graphiste.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
