{% extends 'base.html.twig' %}

{% block body %}
    <div class="container produit">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-5">
                <h1>Modification du Produit </h1>
            </div>
        </div>
    </div>

    <div class="container produit">
        {{ form_start(edit_form) }}
        <div class="row">
            <div class="col-sm-offset-4 col-sm-2">
                <label class="newformtitreprojet" >{{ form_label(edit_form.nom) }}</label>
                {{ form_widget(edit_form.nom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-4 col-sm-2">
                <label class="newformtitreprojet" >{{ form_label(edit_form.googleform) }}</label>
                {{ form_widget(edit_form.googleform) }}
            </div>
        </div>
            <div class="row">
                <div class="col-sm-offset-4 col-sm-2 produit">
                    <input type="submit" value="Modifier" />
                </div>
            </div>
            {{ form_end(edit_form) }}

        </div>
    </div>

    <div class="container produit">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-2 produit_action">
                <ul>
                    <li>
                        <a href="{{ path('produit_index') }}">Retour à la liste</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Suppréssion">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
