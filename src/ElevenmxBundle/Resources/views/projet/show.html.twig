{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projet</h1>
    <div style="border: solid" class="container-fluid">
        <div style="border: solid" class="row">
            <div class="col-sm-6">

                <h4>PROJET : {{ projet.titreProjet }}  </h4>

                <h4>NOM DU CLIENT : {{ projet.client }}</h4>

            </div>
            <div class="col-sm-6">

                <h4>NOM DU PRODUIT : {{ projet.produit }}</h4>

                <h4>NOM DU GRAPHISTE : {{ projet.nomGraphiste }}</h4>
            </div>

        </div>
        <div style="border: solid" class="row">
            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : </h4>
        </div>
    </div>

    <div style="border: solid;margin-top: 10px" class="container-fluid">
        <div style="border: solid; height: 250px; margin-top: 10px" class="row">
            <div style="border: solid; height: 200px" class="col-sm-6">
                {{ form_start(form) }}
            <div style="margin-top: 2%">
                {{ form_label(form.champsText) }}
                {{ form_widget(form.champsText) }}
                {{ form_errors(form.champsText) }}
            </div>
            <div style="display: none">
                {{ form_label(form.id) }}
                {{ form_widget(form.id) }}
                {{ form_errors(form.id) }}
            </div>


            </div>
            <div style="border: solid; height: 200px" class="col-sm-6">
                <div style="margin-top: 2%">
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
                {{ form_errors(form.image) }}
                </div>
                <div>
                {{ form_label(form.file) }}
                {{ form_widget(form.file) }}
                {{ form_errors(form.file) }}
                </div>
            </div>

            <div style="margin-left: 150px" class="add_button center-align">
                <input style="margin-top: 10px" type="submit" value="Envoyer un nouveau BAT" />
            </div>
            {{ form_end(form) }}
        </div>

    </div>



    <div class="container-fluid" style="margin-top: 50px">
        <div class="row" >
            <div >
                <div class="row">

                </div>
                <div>
                    {% if comment != null %}
                        <h4 class="center-align">Liste des commentaires</h4>

                        <div style="border: solid" >


                            {% for comment in comment %}
                                <div class="container-fluid">
                                    {% if comment.id == 24 or comment.id == 26%}
                                    <div class="row" style="border: solid;margin-top: 10px">
                                        <div class=" col-sm-4">

                                            <!--<p> {{ comment.image }} </p>-->
                                            <img style="height: 200px;width: auto" src="{{ app.request.basepath }}/uploads/{{ comment.image }}">
                                        </div>

                                        <div class="col-sm-4">

                                            <h4>Date : </h4>
                                            <p>Status </p>
                                            <p style="border: solid">{{ comment.champsText }}</p>
                                        </div>
                                    </div>
                                    {% else %}
                                        <div class="row" style="border: solid;margin-top: 10px">


                                            <div class="col-sm-offset-4 col-sm-4">

                                                <h4>Date : </h4>
                                                <p>Status </p>
                                                <p style="border: solid">{{ comment.champsText }}</p>
                                            </div>
                                            <div class="col-sm-4">

                                                <!--<p> {{ comment.image }} </p>-->
                                                <img style="height: 200px;width: auto" src="{{ app.request.basepath }}/uploads/{{ comment.image }}">
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <h4 class="center-align">Pas de commentaire</h4>
                    {% endif %}
                </div>
            </div>




        </div>
    </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('projet_index') }}">Retour a la liste des projets</a>
        </li>
        <li>
            <a href="{{ path('projet_edit', { 'id': projet.id }) }}">Edit</a>
        </li>
        <li>

        </li>
    </ul>
{% endblock %}

