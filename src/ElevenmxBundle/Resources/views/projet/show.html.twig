{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div style="border: solid; border-width: 1px; background-color: white" class="row">
            <div class="col-sm-6">

                <h4>PROJET : {{ projet.titreProjet }}  </h4>

                <h4>NOM DU CLIENT : {{ projet.client }}</h4>

            </div>
            <div class="col-sm-6">

                <h4>NOM DU PRODUIT : {{ projet.produit }}</h4>

                <h4>NOM DU GRAPHISTE : {{ projet.nomGraphiste }}</h4>
            </div>

        </div>
        <div style="border: solid; border-width: 1px; background-color: white; padding-left: 14px" class="row">
            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : </h4>
        </div>
    </div>

    <div class="container-fluid">
        <div style=" height: 250px; margin-top: 50px" class="row">
            <div style="height: 200px" class="col-sm-offset-2 col-sm-4">
                {{ form_start(form) }}
            <div style="margin-top: 2%">
                <p>Commentaire</p>

                {{ form_widget(form.champsText,{ 'attr': {'cols': '60', 'rows': '10'} }) }}
                {{ form_errors(form.champsText) }}
            </div>



            </div>
            <div style="height: 200px" class=" col-sm-offset-1 col-sm-4">

                <div style=" margin-top: 100px">

                {{ form_widget(form.file) }}
                {{ form_errors(form.file) }}
                </div>
            </div>
        </div>
            <div style=" margin-top: 10px" class="row">
            <div style="margin-left: 650px" class="add_button center-align">
                <input style="margin-top: 10px" type="submit" value="Envoyer un nouveau BAT" />
            </div>

            {{ form_end(form) }}
        </div>

    </div>



    <div class="container-fluid" style="margin-top: 50px">
        <div class="row" >
            <div class=" col-sm-2">
                <div style="margin-left: 50px" class="add_button center-align">
                    <img style="height: 200px; width: auto" src="http://freevectorlogo.net/wp-content/uploads/2011/05/honda-bike-vector-400x400.jpg">

                </div>
            </div>
            <div class=" col-sm-10">
                <div>
                    {% if comment != null %}




                            {% for comment in comment %}
                                <div class="container-fluid">
                                    {% if comment.id == 2 or comment.id == 4 or comment.id == 6 or comment.id == 8 %}
                                        <div class="row" style="margin-top: 10px; background-color: #218BC3">

                                            <div class=" col-sm-6">
                                                {% if comment.image != NULL %}
                                                    <!--<p> {{ comment.image }} </p>-->
                                                    <img style="height: 200px;width: auto" src="{{ app.request.basepath }}/uploads/{{ comment.image }}">

                                                {% endif %}

                                            </div>

                                            <div class="col-sm-6">

                                                <h4>Date : </h4>
                                                <p>Status </p>
                                                <p style="border: solid; border-width: 1px">{{ comment.champsText }}</p>
                                            </div>
                                        </div>


                                        {% else %}
                                        <div class="row" style="border: solid; border-width: 1px; ;margin-top: 10px; background-color: lightsteelblue ">


                                            <div class="col-sm-6">

                                                <h4>Date : </h4>
                                                <p>Status </p>
                                                <p style="border: solid; border-width: 1px">{{ comment.champsText }}</p>
                                            </div>
                                            <div class="col-sm-6">
                                                {% if comment.image != NULL %}
                                                <!--<p> {{ comment.image }} </p>-->
                                                <img style="height: 200px;width: auto" src="{{ app.request.basepath }}/uploads/{{ comment.image }}">
                                                {% endif %}

                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                    {% else %}
                        <h4 class="center-align">Pas de commentaire</h4>
                    {% endif %}
                </div>
            </div>
        </div>



        </div>
    </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('projet_index') }}">Retour a la liste des projets</a>
        </li>
        <li>
            <a href="{{ path('projet_edit', { 'id': projet.id }) }}">Edit</a>
        </li>
        <li>

        </li>
    </ul>
{% endblock %}

