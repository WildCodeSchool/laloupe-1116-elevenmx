{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="projet_h1">Liste des Projets</h1>

    <table class="projet_index_table1">
        <thead>

        </thead>

        <tbody>
        {% for projet in projets %}
            <tr>

                {% if projet.client != null %}

                    <div class="container-fluid">

                        <div class="row">
                            <a href="{{ path('projet_show', { 'id': projet.id }) }}" class="">

                                <div id="projet_ligne_aff" class="col-xs-offset-1 col-xs-10" >

                                    <div class="row" >
                                        <div class="col-xs-1">

                                            <img src="http://www.elevenmx.com/skin/frontend/tm_themes/theme741/images/logo.png">
                                        </div>

                                        <div class="col-xs-offset-1 col-xs-4" id="projet_ligne_bloc1_aff">
                                            <h4 class="projet_bloc_h4_aff">PROJET : {{ projet.titreProjet }}  </h4>

                                            <h4 class="projet_bloc1_h4_bis_aff">NOM DU PRODUIT : {{ projet.produit }}</h4>
                                        </div>
                                        <div class="col-xs-offset-1 col-xs-4" id="projet_ligne_bloc1_aff">
                                            <h4 class="projet_bloc_h4_aff">NOM DU CLIENT : {{ projet.client }}</h4>

                                            <h4 class="projet_bloc1_h4_bis_aff">NOM DU GRAPHISTE : {{ projet.nomGraphiste }}</h4>
                                        </div>
                                    </div>
                                    <div class="row" >
                                        {% if projet.titreProjet == "projet6" %}
                                            <div class="col-xs-offset-2 col-xs-9" id="projet_statut_red">
                                                <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : </h4>
                                            </div>
                                        {% else %}
                                            <div class="col-xs-offset-2 col-xs-9" id="projet_statut_green">
                                                <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : </h4>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="row" >
                                        <div class="col-xs-offset-2 col-xs-9" style=" margin-top:10px">
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                     </div>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
