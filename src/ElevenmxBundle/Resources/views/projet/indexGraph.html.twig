{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="projet_h1">Liste des Projets Pour le Graphiste</h1>



            {# ****************************** Champs de recherche *************************************** #}

                    <input type="text" placeholder="Entrez votre recherche" id="search">


        {# ****************************** Fin Champs de recherche *************************************** #}

        {% for projet in projets %}


                {% if projet.client != NULL %}


                    <div class="container-fluid">

                        <div class="row" >
                            <a  class="">

                                <div id="projet_ligne_aff" class="col-xs-offset-1 col-xs-10" >

                                    <div class="row" >
                                        <div class="col-xs-1">

                                            <img src="http://www.elevenmx.com/skin/frontend/tm_themes/theme741/images/logo.png">
                                        </div>

                                        <div class="col-xs-offset-1 col-xs-4 Filtre" id="projet_ligne_bloc1_aff">
                                            <h4 class="projet_bloc_h4_aff">PROJET : {{ projet.titreProjet }}  </h4></div>

                                            <h4 class="projet_bloc1_h4_bis_aff Filtre">NOM DU PRODUIT : {{ projet.produit }}</h4>
                                        </div>
                                        <div class="col-xs-offset-1 col-xs-4" id="projet_ligne_bloc1_aff">
                                            <h4 class="projet_bloc_h4_aff Filtre">NOM DU CLIENT : {{ projet.client }}</h4>

                                            <h4 class="projet_bloc1_h4_bis_aff Filtre">NOM DU GRAPHISTE : {{ projet.nomGraphiste }}</h4>
                                        </div>
                                    </div>
                                    <div class="row" >
                                        {% if projet.titreProjet == "projet6" %}
                                            <div class="col-xs-offset-2 col-xs-7" id="projet_statut_red">
                                                <h4 class="projet_bloc_h4_aff Filtre"> STATUT DU PROJET : </h4>
                                            </div>
                                        {% else %}
                                            <div class="col-xs-offset-2 col-xs-7" id="projet_statut_green">
                                                <h4 class="projet_bloc_h4_aff Filtre"> STATUT DU PROJET : </h4>
                                            </div>
                                        {% endif %}
                                        <div class="col-xs-offset-1 col-xs-1" id="projet_ligne_bloc1_aff">
                                            <a href="{{ path('projet_showGraph', { 'id': projet.id }) }}" >
                                                <div>
                                                    <h4 class="projet_bloc_h4_aff"> GERER </h4>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="row" >
                                        <div id="espacesousgerer" class="col-xs-offset-2 col-xs-9">
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endif %}
        {% endfor %}

{% endblock %}


{% block javascripts %}
    <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/elevenmx/js/recherchejQuery.js') }}"></script>
{% endblock %}
