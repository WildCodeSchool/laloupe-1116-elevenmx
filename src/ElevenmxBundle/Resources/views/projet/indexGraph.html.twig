{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="projet_h1">Liste des Projets Pour le Graphiste</h1>

        {# ****************************** Fin Champs de recherche *************************************** #}
    <div class="row">
        <h4 class="titelsearch">Entrez votre recherche :</h4>
        <input type="text" placeholder="Entrez votre recherche" id="search"> {#id pour cibler notre champs lors de l'execution de jquery#}
    </div>
        {% for projet in projets %}

                {% if projet.user != NULL and projet.status != "Projet terminé"%}



                    <div id="versusfooterindexGraph" class="container-fluid filtre">{# la classe filtre permet de cibler la zone de recherche de notre jquery#}
                        {# ****************************** Champs de recherche *************************************** #}


                            <div id="projet_ligne_aff" class="col-xs-offset-1 col-xs-10" >

                                <div class="row" >
                                    <div class="col-xs-1">

                                        <img src="http://www.elevenmx.com/skin/frontend/tm_themes/theme741/images/logo.png">
                                    </div>

                                    <div class="col-xs-offset-1 col-xs-4" id="projet_ligne_bloc1_aff">
                                        <h4 class="projet_bloc_h4_aff">PROJET : {{ projet.titreProjet }}  </h4>


                                        <h4 class="projet_bloc1_h4_bis_aff ">NOM DU PRODUIT : {{ projet.produit }}</h4>
                                    </div>
                                    <div class="col-xs-offset-1 col-xs-4" id="projet_ligne_bloc1_aff">
                                        <h4 class="projet_bloc_h4_aff">NOM DU CLIENT : {{ projet.user }}</h4>

                                        <h4 class="projet_bloc1_h4_bis_aff">NOM DU GRAPHISTE : {{ projet.nomGraphiste }}</h4>
                                    </div>
                                    <div class="col-xs-offset-1 col-sm-4">

                                        <h4 class="projet_bloc_h4_aff"> Date de création : {{ projet.dateCreationProjet }} </h4>
                                    </div>
                                </div>

                                <div class="row" >
                                    {% if projet.status == "Attente d'information" %}
                                        <div class="col-xs-offset-2 col-xs-7" id="projet_statut_green">
                                            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : {{ projet.status }}</h4>
                                        </div>

                                    {% elseif projet.status == "Maquette à faire" %}
                                        <div class="col-xs-offset-2 col-xs-7" id="projet_statut_red">
                                            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : {{ projet.status }}</h4>
                                        </div>

                                    {% elseif projet.status == "Maquette en attente de validation" %}
                                        <div class="col-xs-offset-2 col-xs-7" id="projet_statut_green">
                                            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : {{ projet.status }}</h4>
                                        </div>

                                    {% elseif projet.status == "Maquette à modifier" %}
                                        <div class="col-xs-offset-2 col-xs-7" id="projet_statut_orange">
                                            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : {{ projet.status }}</h4>
                                        </div>

                                    {% elseif projet.status == "Maquette validée" %}
                                        <div class="col-xs-offset-2 col-xs-7" id="projet_statut_orange">
                                            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : {{ projet.status }}</h4>
                                        </div>

                                    {% elseif projet.status == "Projet terminé"  %}
                                        <div class="col-xs-offset-2 col-xs-7" id="projet_statut_blanc">
                                            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : {{ projet.status }}</h4>
                                        </div>

                                    {% else %}
                                        <div class="col-xs-offset-2 col-xs-7" >
                                            <h4 class="projet_bloc_h4_aff"> STATUT DU PROJET : Statut inconnu</h4>
                                        </div>
                                    {% endif %}

                                    <div class="col-xs-offset-1 col-xs-1" id="projet_ligne_bloc1_aff">
                                        <a href="{{ path('projet_editGraph', { 'id': projet.id }) }}" >
                                            <div>
                                                <h4 class="projet_bloc_h4_aff"> GERER </h4>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="row" >
                                    <div id="espacesousgerer" class="col-xs-offset-2 col-xs-9">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endif %}
        {% endfor %}

{% endblock %}


{% block javascripts %}{#necessaire pour faire la recherche en jquery#}
    <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/elevenmx/js/recherchejQuery.js') }}"></script>
{% endblock %}
