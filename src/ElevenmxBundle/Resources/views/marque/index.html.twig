{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-5">
                <h1>Liste des Marques</h1>
            </div>
        </div>
    </div>

    <div style="margin-top: 20px" class="container">
        <div class="row">
            <div class="col-sm-offset-2 col-sm-1">
                <th>Nom</th>
            </div>

            <div class="col-sm-offset-1 col-sm-2">
                <th>Image</th>
            </div>
            <div class="col-sm-offset-1 col-sm-2">
                <th>Actions</th>
            </div>
        </div>

        <tbody>
        {% for marque in marques %}
            <div class="row">

                <div class="col-sm-offset-2 col-sm-1">
                    <td>{{ marque.nom }}</td>
                </div>

                <div class="col-sm-offset-1 col-sm-2">
                    <td><img style="height: 150px; width: auto" src="{{ app.request.basepath }}/uploads/{{ marque.image1 }}"></td>
                </div>
                <div class="col-sm-offset-1 col-sm-2">
                    <td>
                        <ul>
                            <a href="{{ path('marque_edit', { 'id': marque.id }) }}">Modification</a>
                        </ul>
                    </td>
                </div>
            </div>
        {% endfor %}

        </tbody>

    </div>

    </div>

    <div style="margin-top: 20px" class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-3">
                <ul>
                    <a href="{{ path('marque_new') }}">Cr√©ation d'une Marque</a>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
