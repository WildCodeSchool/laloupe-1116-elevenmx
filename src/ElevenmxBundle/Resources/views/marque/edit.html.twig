{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row marque">
            <div class="col-sm-offset-3 col-sm-5">
                <h1>Modification d'une Marque</h1>
            </div>
        </div>
    </div>

    <div class="container">

        {{ form_start(edit_form) }}
        <div class="row marque">
            <div class="col-sm-offset-4 col-sm-2">
                <label class="newformtitreprojet" >{{ form_label(edit_form.nom) }}</label>
                {{ form_widget(edit_form.nom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-4 col-sm-2">
                <label class="newformtitreprojet" >{{ form_label(edit_form.image1) }}</label>
                {{ form_widget(edit_form.image1) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-4 col-sm-2">
                <img style="height: 200px; width: auto" src="{{ app.request.basepath }}/uploads/{{ marque.image1 }}">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-4 col-sm-2">
                {{ form_widget(edit_form.file1) }}
            </div>
        </div>

        <div class="row marque">
            <div class="col-sm-offset-4 col-sm-2">
                <input type="submit" value="Modification" />

            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>


    <div class="container">
        <div class="row marque_action">
            <div class="col-sm-offset-3 col-sm-4">
                <ul>
                    <a href="{{ path('marque_index') }}">Retour à la liste</a>

                    {{ form_start(delete_form) }}
                    <input type="submit" value="Suppréssion">
                    {{ form_end(delete_form) }}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
