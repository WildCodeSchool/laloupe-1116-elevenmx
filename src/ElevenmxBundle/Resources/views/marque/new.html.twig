{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-5">
                <h1>Création d'une Marque</h1>
            </div>
        </div>
    </div>

    <div class="versusfooterindexHisto">

        {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-offset-4 col-sm-2">
                <label class="newformtitreprojet" >{{ form_label(form.nom) }}</label>
                {{ form_widget(form.nom) }}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-offset-4 col-sm-2">
                <label class="newformtitreprojet" >{{ form_label(form.image1) }}</label>
                {{ form_widget(form.image1) }}
            </div>
        </div>
        <div class="row ">
            <div class="col-sm-offset-4 col-sm-2">
                <label class="newformtitreprojet" >{{ form_label(form.file1) }}</label>
                {{ form_widget(form.file1) }}
            </div>
        </div>

        <div class="row marque">
            <div class="col-sm-offset-4 col-sm-2">
                <input type="submit" value="Création" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row marque_action">
            <div class="col-sm-offset-3 col-sm-4">
                <ul>

                        <a href="{{ path('marque_index') }}">Retour à la liste</a>

                </ul>
            </div>
        </div>
    </div>


{% endblock %}
